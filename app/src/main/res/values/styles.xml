<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for Headers in AddEditActivity and BookDetailsActivity -->
    <style name="HeaderStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">@dimen/parameter_16_dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif-smallcaps</item>
        <item name="android:textSize">@dimen/text_size_14_sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for EditText fields -->
    <style name="EditTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/text_size_18_sp</item>
    </style>

    <!-- Style for EditText lines -->
    <style name="EditTextLinesStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:paddingEnd">@dimen/parameter_4_dp</item>
        <item name="android:paddingStart">@dimen/parameter_4_dp</item>
    </style>

    <!-- Increment/Decrement button's style -->
    <style name="QuantityBtnStyle">
        <item name="android:layout_height">@dimen/parameter_36_dp</item>
        <item name="android:layout_width">@dimen/parameter_36_dp</item>
        <item name="android:layout_marginLeft">@dimen/parameter_4_dp</item>
        <item name="android:layout_marginRight">@dimen/parameter_4_dp</item>
    </style>

    <!-- Quantity TextView style -->
    <style name="QuantityTVStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">@dimen/parameter_4_dp</item>
        <item name="android:paddingRight">@dimen/parameter_4_dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_size_18_sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- BookDetailsActivity delete/contact button's style -->
    <style name="ButtonStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/parameter_8_dp</item>
        <item name="android:textColor">@color/btnTextColor</item>
        <item name="android:layout_marginEnd">@dimen/parameter_8_dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- CardView style -->
    <style name="CardViewStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">@dimen/parameter_36_dp</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:minHeight">@dimen/card_min_height</item>
        <item name="android:maxHeight">@dimen/card_max_height</item>
    </style>

    <!-- TextView in the CardView Style-->
    <style name="TextViewCVStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginEnd">@dimen/parameter_16_dp</item>
        <item name="android:layout_marginStart">@dimen/parameter_16_dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
    </style>

</resources>
