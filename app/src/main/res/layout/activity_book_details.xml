<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dummy2"
        tools:context=".BookDetailsActivity">

        <!-- Book info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Label -->
            <TextView
                style="@style/CategoryStyle"
                android:text="@string/book_info" />

            <!-- Input fields -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:paddingLeft="4dp">

                <!-- Title field -->
                <EditText
                    android:id="@+id/edit_book_title"
                    style="@style/EditorFieldStyle"
                    android:inputType="textCapWords" />

                <!-- Author field -->
                <EditText
                    android:id="@+id/edit_book_author"
                    style="@style/EditorFieldStyle"
                    android:inputType="textCapWords" />
            </LinearLayout>
        </LinearLayout>

        <!-- Price category -->
        <LinearLayout
            android:id="@+id/container_measurement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Label -->
            <TextView
                style="@style/CategoryStyle"
                android:text="@string/book_price" />

            <!-- Input fields -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="4dp">

                <!-- Price field -->
                <EditText
                    android:id="@+id/edit_book_price"
                    style="@style/EditorFieldStyle"
                    android:inputType="number" />

                <!-- Units for price ($) -->
                <TextView
                    android:id="@+id/label_weight_units"
                    style="@style/EditorUnitsStyle"
                    android:text="$" />
            </RelativeLayout>
        </LinearLayout>

        <!-- Quantity -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Label -->
            <TextView
                style="@style/CategoryStyle"
                android:text="@string/book_quantity" />

            <!-- Quantity field -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/decrement_img_btn"
                    android:layout_width="@dimen/dummy3"
                    android:layout_height="@dimen/dummy3"
                    android:layout_marginLeft="@dimen/dummy"
                    android:background="@drawable/ic_remove_circle_outline_black_36dp" />

                <TextView
                    android:id="@+id/quantity_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/dummy"
                    android:text="0" />

                <ImageButton
                    android:id="@+id/increment_img_btn"
                    android:layout_width="@dimen/dummy3"
                    android:layout_height="@dimen/dummy3"
                    android:layout_marginLeft="@dimen/dummy"
                    android:background="@drawable/ic_add_circle_outline_black_36dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Supplier's info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Label -->
            <TextView
                style="@style/CategoryStyle"
                android:text="@string/supplier_info" />

            <!-- Input fields -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:paddingLeft="4dp">

                <!-- Title field -->
                <EditText
                    android:id="@+id/supplier_name"
                    style="@style/EditorFieldStyle"
                    android:inputType="textCapWords" />

                <!-- Author field -->
                <EditText
                    android:id="@+id/supplier_phone"
                    style="@style/EditorFieldStyle"
                    android:inputType="textCapWords" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/delete_record_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delete record" />

            <Button
                android:id="@+id/contact_supplier_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Contact supplier" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>