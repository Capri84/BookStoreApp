<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    style="@style/CardViewStyle"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    android:layout_marginBottom="@dimen/parameter_16_dp"
    card_view:cardElevation="@dimen/card_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/vintage_books">

        <TextView
            android:id="@+id/book_title_tv"
            style="@style/TextViewCVStyle"
            android:layout_marginTop="@dimen/parameter_16_dp"
            android:textColor="@color/titleTextColor"
            android:textSize="@dimen/text_size_22_sp"
            tools:text="@string/preview_book_title" />

        <TextView
            android:id="@+id/book_author_tv"
            style="@style/TextViewCVStyle"
            android:layout_below="@id/book_title_tv"
            android:textColor="#f47342"
            android:textSize="@dimen/text_size_18_sp"
            tools:text="@string/preview_book_author" />

        <TextView
            android:id="@+id/book_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/book_author_tv"
            android:layout_marginBottom="@dimen/parameter_16_dp"
            android:layout_marginEnd="@dimen/parameter_46_dp"
            android:textColor="@color/titleTextColor"
            android:textSize="@dimen/text_size_36_sp"
            android:textStyle="bold"
            tools:text="@string/preview_price" />

        <TextView
            android:id="@+id/in_stock_tv"
            style="@style/TextViewCVStyle"
            android:layout_width="wrap_content"
            android:layout_below="@id/book_price_tv"
            android:layout_marginBottom="@dimen/parameter_16_dp"
            android:layout_marginEnd="@dimen/parameter_8_dp"
            android:layout_marginTop="@dimen/parameter_16_dp"
            android:padding="@dimen/parameter_4_dp"
            android:text="@string/in_stock_tv"
            android:textColor="@color/quantityTextColor"
            android:textSize="@dimen/text_size_22_sp" />

        <TextView
            android:id="@+id/in_stock_quantity_tv"
            style="@style/TextViewCVStyle"
            android:layout_width="wrap_content"
            android:layout_below="@id/book_price_tv"
            android:layout_marginBottom="@dimen/parameter_16_dp"
            android:layout_marginTop="@dimen/parameter_16_dp"
            android:layout_toEndOf="@id/in_stock_tv"
            android:padding="@dimen/parameter_4_dp"
            android:textColor="@color/quantityTextColor"
            android:textSize="@dimen/text_size_22_sp"
            tools:text="@string/preview_in_stock" />

        <ImageButton
            android:id="@+id/sale_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/book_price_tv"
            android:layout_marginBottom="@dimen/parameter_16_dp"
            android:layout_marginEnd="@dimen/parameter_46_dp"
            android:layout_marginTop="@dimen/parameter_16_dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/sale_button"
            android:src="@drawable/ic_add_shopping_cart_lime_600_36dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>